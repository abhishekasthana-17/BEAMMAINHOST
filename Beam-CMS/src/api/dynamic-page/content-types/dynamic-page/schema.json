{
  "kind": "collectionType",
  "collectionName": "dynamic_pages",
  "info": {
    "singularName": "dynamic-page",
    "pluralName": "dynamic-pages",
    "displayName": "Dynamic Page",
    "description": "Flexible page content type for all website pages"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "hero": {
      "type": "component",
      "repeatable": false,
      "component": "content.hero"
    },
    "content": {
      "type": "dynamiczone",
      "components": [
        "content.section",
        "content.section-button"
      ]
    },
    "published": {
      "type": "boolean",
      "default": true,
      "required": false
    }
  }
}
